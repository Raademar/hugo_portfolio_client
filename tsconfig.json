{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"module": "commonjs",
		"noEmit": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": ["**/node_modules/*", ".cache", "node_modules", "public"]
}
